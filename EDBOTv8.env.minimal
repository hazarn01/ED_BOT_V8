# Minimal EDBotv8 Configuration for Apple Silicon M4
# Core Configuration
APP_NAME=EDBotv8
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
PORT=8001

# Database & Cache
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=edbotv8
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# LLM Backend - Ollama for M4
LLM_BACKEND=ollama
OLLAMA_BASE_URL=http://ollama:11434

# Emergency Azure Fallback (disabled)
USE_AZURE_FALLBACK=false
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=

# Feature Flags - Basic setup for M4
FEATURES__SEARCH_BACKEND=pgvector
FEATURES__ENABLE_HYBRID_SEARCH=false
FEATURES__ENABLE_ELASTICSEARCH=false
FEATURES__ENABLE_SOURCE_HIGHLIGHTING=false
FEATURES__ENABLE_PDF_VIEWER=false
FEATURES__ENABLE_TABLE_EXTRACTION=false
FEATURES__ENABLE_SEMANTIC_CACHE=false
FEATURES__ENABLE_STREAMLIT_DEMO=false
FEATURES__ENABLE_PHI_SCRUBBING=true
FEATURES__ENABLE_RESPONSE_VALIDATION=true
FEATURES__ENABLE_METRICS=false
FEATURES__ENABLE_MEDICAL_METRICS=false

# File Paths
DOCS_PATH=./docs

# Security/Compliance
DISABLE_EXTERNAL_CALLS=true
LOG_SCRUB_PHI=true
TRUSTED_HOSTS=localhost,127.0.0.1
ALLOWED_ORIGINS=http://localhost:8001

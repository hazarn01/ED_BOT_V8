# EDBotv8 Comprehensive Configuration Example
# Use environment-specific files: .env.development, .env.staging, .env.production

# Core Configuration
APP_NAME=EDBotv8
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
PORT=8001

# Database & Cache
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=edbotv8
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# LLM Backend - GPT-OSS ONLY
LLM_BACKEND=gpt-oss
GPT_OSS_URL=http://gpt-oss:8000/v1
GPT_OSS_MODEL=microsoft/DialoGPT-medium

# Emergency Azure Fallback (disabled by default)
USE_AZURE_FALLBACK=false
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=

# Feature Flags - Search & Retrieval
FEATURES__SEARCH_BACKEND=pgvector
FEATURES__ENABLE_HYBRID_SEARCH=false
FEATURES__ENABLE_ELASTICSEARCH=false

# Feature Flags - Enhancements  
FEATURES__ENABLE_SOURCE_HIGHLIGHTING=false
FEATURES__ENABLE_PDF_VIEWER=false
FEATURES__ENABLE_TABLE_EXTRACTION=false
FEATURES__ENABLE_SEMANTIC_CACHE=false

# Feature Flags - UI & Demo
FEATURES__ENABLE_STREAMLIT_DEMO=false

# Feature Flags - Safety & Compliance
FEATURES__ENABLE_PHI_SCRUBBING=true
FEATURES__ENABLE_RESPONSE_VALIDATION=true

# Feature Flags - Observability
FEATURES__ENABLE_METRICS=true
FEATURES__ENABLE_MEDICAL_METRICS=true

# Elasticsearch Configuration - Disabled for M4 stability
# HYBRID_SEARCH__ELASTICSEARCH_URL=http://elasticsearch:9200
# HYBRID_SEARCH__ELASTICSEARCH_INDEX_PREFIX=edbot
# HYBRID_SEARCH__ELASTICSEARCH_TIMEOUT=30

# Cache Configuration - Simplified for M4
# CACHE_CONFIG__MIN_CONFIDENCE_TO_CACHE=0.7

# Table Extraction - Simplified for M4
# TABLE_EXTRACTION__EXTRACTION_STRATEGY=unstructured
# TABLE_EXTRACTION__TABLE_CONFIDENCE_THRESHOLD=0.6
# TABLE_EXTRACTION__MAX_TABLE_SIZE=1000
# TABLE_EXTRACTION__CLASSIFY_TABLES=true

# Simplified configuration for M4 compatibility
# Advanced features disabled for stable operation

# File Paths
DOCS_PATH=./docs

# Security/Compliance (Legacy - maintained for compatibility)
DISABLE_EXTERNAL_CALLS=true
LOG_SCRUB_PHI=true
TRUSTED_HOSTS=localhost,127.0.0.1
ALLOWED_ORIGINS=http://localhost:8001

# LangExtract (optional)
LANGEXTRACT_API_KEY= 
# Simple EDBotv8 Configuration for Apple Silicon M4
# Core Configuration
DEBUG=false
PORT=8001

# Database & Cache
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=edbotv8
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# LLM Backend - Ollama for M4
LLM_BACKEND=ollama
OLLAMA_BASE_URL=http://ollama:11434

# File Paths
DOCS_PATH=./docs

# Security/Compliance
DISABLE_EXTERNAL_CALLS=true
LOG_SCRUB_PHI=true
